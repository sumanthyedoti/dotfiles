{
	"$schema": "https://opencode.ai/config.json",
	"plugin": ["opencode-antigravity-auth@latest"],
	"mcp": {
		"shadcn": {
			"type": "local",
			"command": ["npx", "shadcn@latest", "mcp"],
			"enabled": true
		},
		"serena": {
			"type": "local",
			"command": [
				"uvx",
				"--from",
				"git+https://github.com/oraios/serena",
				"serena",
				"start-mcp-server"
			],
			"enabled": true
		},
		"chrome-devtools": {
			"type": "local",
			"command": ["npx", "-y", "chrome-devtools-mcp@latest"]
		},
		"playwriter": {
			"type": "local",
			"command": ["npx", "-y", "playwriter@latest"],
			"enabled": true,
			"environment": {}
		}
	},
	"provider": {
		"google": {
			"name": "Google",
			"models": {
				"antigravity-gemini-3-pro": {
					"name": "Gemini 3 Pro (Antigravity)",
					"limit": {
						"context": 1048576,
						"output": 65535
					},
					"modalities": {
						"input": ["text", "image", "pdf"],
						"output": ["text"]
					},
					"variants": {
						"low": {
							"thinkingLevel": "low"
						},
						"high": {
							"thinkingLevel": "high"
						}
					}
				},
				"antigravity-gemini-3-flash": {
					"name": "Gemini 3 Flash (Antigravity)",
					"limit": {
						"context": 1048576,
						"output": 65536
					},
					"modalities": {
						"input": ["text", "image", "pdf"],
						"output": ["text"]
					},
					"variants": {
						"minimal": {
							"thinkingLevel": "minimal"
						},
						"low": {
							"thinkingLevel": "low"
						},
						"medium": {
							"thinkingLevel": "medium"
						},
						"high": {
							"thinkingLevel": "high"
						}
					}
				},
				"antigravity-claude-sonnet-4-5": {
					"name": "Claude Sonnet 4.5 (Antigravity)",
					"limit": {
						"context": 200000,
						"output": 64000
					},
					"modalities": {
						"input": ["text", "image", "pdf"],
						"output": ["text"]
					}
				},
				"antigravity-claude-sonnet-4-5-thinking": {
					"name": "Claude Sonnet 4.5 Thinking (Antigravity)",
					"limit": {
						"context": 200000,
						"output": 64000
					},
					"modalities": {
						"input": ["text", "image", "pdf"],
						"output": ["text"]
					},
					"variants": {
						"low": {
							"thinkingConfig": {
								"thinkingBudget": 8192
							}
						},
						"max": {
							"thinkingConfig": {
								"thinkingBudget": 32768
							}
						}
					}
				},
				"antigravity-claude-opus-4-5-thinking": {
					"name": "Claude Opus 4.5 Thinking (Antigravity)",
					"limit": {
						"context": 200000,
						"output": 64000
					},
					"modalities": {
						"input": ["text", "image", "pdf"],
						"output": ["text"]
					},
					"variants": {
						"low": {
							"thinkingConfig": {
								"thinkingBudget": 8192
							}
						},
						"max": {
							"thinkingConfig": {
								"thinkingBudget": 32768
							}
						}
					}
				}
			}
		}
	}
}
